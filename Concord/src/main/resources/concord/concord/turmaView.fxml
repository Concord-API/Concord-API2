<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="dark-theme" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="concord.concord.controllers.TurmaController">
    <children>
        <HBox layoutY="650.0" prefHeight="50.0" prefWidth="1280.0" styleClass="button-container">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#showAddDialog" prefHeight="40.0" prefWidth="320.0" styleClass="primary-button" text="Adicionar Turma">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#showEditDialog" prefHeight="40.0" prefWidth="320.0" styleClass="primary-button" text="Editar Turma">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#showDeleteDialog" prefHeight="40.0" prefWidth="320.0" styleClass="danger-button" text="Excluir Turma">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="table" layoutY="0.0" prefHeight="650.0" prefWidth="1280.0" styleClass="modern-table">
            <columns>
                <TableColumn fx:id="modalidadeCol" prefWidth="320.0" styleClass="table-column" text="Modalidade" />
                <TableColumn fx:id="turnoCol" prefWidth="320.0" styleClass="table-column" text="Turno" />
                <TableColumn fx:id="periodoCol" prefWidth="320.0" styleClass="table-column" text="PerÃ­odo" />
                <TableColumn fx:id="cursoCol" prefWidth="320.0" styleClass="table-column" text="Curso" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
 