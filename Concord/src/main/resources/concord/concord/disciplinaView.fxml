<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="650.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="concord.concord.controllers.DisciplinaController">
    <children>
        <HBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#showAddDialog" text="Adicionar" />
                <Button mnemonicParsing="false" onAction="#showEditDialog" text="Editar" />
                <Button mnemonicParsing="false" onAction="#deleteSelectedDisciplina" text="Excluir" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <TableView fx:id="table" layoutY="0.0" prefHeight="650.0" prefWidth="1280.0" styleClass="modern-table">
            <columns>
                <TableColumn fx:id="nomeCol" prefWidth="1280.0" text="Nome" styleClass="table-column" />
            </columns>
        </TableView>
    </children>
</AnchorPane> 