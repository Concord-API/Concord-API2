<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="concord.concord.controllers.AulaController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <TextField alignment="CENTER" layoutY="314.0" prefHeight="31.0" prefWidth="600.0" text="Área do Coordenador">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
        </TextField>
        <HBox layoutX="149.0" layoutY="345.0" prefHeight="25.0" prefWidth="300.0">
            <children>
                <Button onAction="#showAddDialog" text="Adicionar Grade" />
                <Button onAction="#showEditDialog" text="Editar Grade" />
                <Button onAction="#deleteSelectedClass" text="Excluir Grade" />
            </children>
        </HBox>

        <TableView fx:id="table" layoutY="-1.0" prefHeight="315.0" prefWidth="700.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="courseCol" prefWidth="139.0" text="Curso" />
                <TableColumn fx:id="classNameCol" prefWidth="238.0" text="Matéria" />
                <TableColumn fx:id="professorCol" prefWidth="224.0" text="Professor (a)" />
                <TableColumn fx:id="dayCol" prefWidth="56.0" text="Dia " />
                <TableColumn fx:id="timeCol" prefWidth="49.0" text="Horário" />
            </columns>
        </TableView>
    </children>
</AnchorPane>