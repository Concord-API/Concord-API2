<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="concord.concord.controllers.AulaController">
    <children>
        <TextField alignment="CENTER" layoutY="648.0" prefHeight="40.0" prefWidth="1280.0" text="Área do Coordenador">
            <font>
                <Font name="Arial" size="20.0" />
            </font>
        </TextField>
        <HBox layoutY="692.0" prefHeight="27.0" prefWidth="1280.0">
            <children>
                <Button onAction="#showAddDialog" prefHeight="25.0" prefWidth="426.0" text="Adicionar Aula">
               <font>
                  <Font size="13.0" />
               </font></Button>
                <Button onAction="#showEditDialog" prefHeight="25.0" prefWidth="430.0" text="Editar Aula">
               <font>
                  <Font size="13.0" />
               </font></Button>
                <Button onAction="#deleteSelectedClass" prefHeight="25.0" prefWidth="426.0" text="Excluir Aula">
               <font>
                  <Font size="13.0" />
               </font></Button>
            </children>
        </HBox>

        <TableView fx:id="table" layoutY="-2.0" prefHeight="650.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="classNameCol" prefWidth="384.0" text="Disciplina" />
                <TableColumn fx:id="dayCol" prefWidth="128.0" text="Dia " />
                <TableColumn fx:id="timeCol" prefWidth="128.0" text="Horário" />
                <TableColumn fx:id="courseCol" prefWidth="284.0" text="Curso" />
                <TableColumn fx:id="professorCol" prefWidth="384.0" text="Professor (a)" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
