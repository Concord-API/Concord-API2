<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="467.0" prefWidth="704.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="concord.concord.controllers.AulaController">
    <children>
        <TextField alignment="CENTER" layoutY="405.0" prefHeight="31.0" prefWidth="704.0" text="Área do Coordenador">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
        </TextField>
        <HBox layoutX="202.0" layoutY="442.0" prefHeight="31.0" prefWidth="300.0">
            <children>
                <Button onAction="#showAddDialog" prefHeight="25.0" prefWidth="100.0" text="Adicionar Aula" />
                <Button onAction="#showEditDialog" prefHeight="25.0" prefWidth="100.0" text="Editar Aula" />
                <Button onAction="#deleteSelectedClass" prefHeight="25.0" prefWidth="100.0" text="Excluir Aula" />
            </children>
        </HBox>

        <TableView fx:id="table" layoutY="-1.0" prefHeight="408.0" prefWidth="704.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="diciplinaCol" prefWidth="240.0" text="Aula" />
                <TableColumn fx:id="courseCol" prefWidth="140.0" text="Curso" />
                <TableColumn fx:id="professorCol" prefWidth="210.0" text="Professor (a)" />
                <TableColumn fx:id="diaCol" prefWidth="50.0" text="Dia " />
                <TableColumn fx:id="horarioCol" prefWidth="65.0" text="Horário" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
